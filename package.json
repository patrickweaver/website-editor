{
  "name": "website-editor",
  "version": "0.4.1",
  "description": "An in-browser website editor for creating HTML files",
  "engines": {
    "node": ">=18.3.0"
  },
  "scripts": {
    "dev": "vite --config ./src/vite.config.js",
    "build": "vite build --config ./src/vite.config.js && rm -rf dist/assets",
    "preview": "vite preview --config ./src/vite.config.js"
  },
  "type": "module",
  "devDependencies": {
    "vite": "^2.9.9",
    "vite-plugin-singlefile": "^0.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrickweaver/website-editor.git"
  },
  "author": "Patrick Weaver",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickweaver/website-editor/issues"
  },
  "homepage": "https://github.com/patrickweaver/website-editor#readme"
}
