{
  "name": "website-editor",
  "version": "0.5.0",
  "description": "An in-browser website editor for creating HTML files",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "dev": "vite --config ./src/vite.config.ts",
    "build": "vite build --config ./src/vite.config.ts && rm -rf dist/assets",
    "preview": "vite preview --config ./src/vite.config.ts"
  },
  "type": "module",
  "devDependencies": {
    "@types/node": "^22.14.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vite-plugin-singlefile": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrickweaver/website-editor.git"
  },
  "author": "Patrick Weaver",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickweaver/website-editor/issues"
  },
  "homepage": "https://github.com/patrickweaver/website-editor#readme",
  "dependencies": {
    "@types/wicg-file-system-access": "^2023.10.5"
  }
}
